extends layout

block navbar
  if auth
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-collapsing', aria-expanded='false')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img(src='fa.png', width='20', height='20')
          a.navbar-brand(href='#')
            img.img-circle.pull-left(src=user.profile_picture, alt=user.username, width='20', height='20')
            | &nbsp;
            =user.username
            | &nbsp;
            if user.counts.followed_by > 0
              span.badge.hidden-xs
                =user.counts.followed_by
              span.badge.visible-xs-inline
                =user.counts.followed_by_human

        #nav-collapsing.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li: a(href='/privacy-policy') Privacy Policy
            li: a(href='/logout') Exit


block content
  unless auth
    br
    .row.hidden-xs.hidden-sm
      .col-md-5.text-right
        img(src='fa.png', style='width:128px;height:128px')
      .col-md-7
        h1(style='margin-top:28px')= title

    .row.visible-xs-block.visible-sm-block
      .col-xs-12.text-center
        img(src='fa.png', style='width:128px;height:128px')
      .col-xs-12.text-center
        h1= title

    br
    .row
      .col-md-6.col-md-offset-3
        p.text-center.text-muted.
          This simple web app will let you find out proportion of followers and strangers among those,
          who liked and commented your posts.
    .row
      .col-xs-12
        .text-center
          br
          br
          p: a.btn.btn-lg.btn-info(href=instagramLoginUrl) Login with Instagram
          br
          br
          p: a(href='/privacy-policy') Privacy Policy
